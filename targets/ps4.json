{
  "limits": {
    "codec": {
      "audio": {
        "bit_rate": 320000,
        "channels": 2
      },
      "video": {
        "bit_rate": 20000000,
        "pix_fmt": "yuv420p"
      }
    }
  },
  "name": "ps4",
  "enabled": [ "hls" ],
  "options": {
    "defaults": {
      "audio": {
        "channels": 2,
        "codec": [
          "libfdk_aac",
          "aac"
        ],
        "sampleRate": 48000
      },
      "container": {
        "trackCount": {
          "video": 1,
          "audio": 1
        }
      },
      "video": {
        "codec": [ "h264_nvenc", "libx264" ]
      }
    },
    "hls": {
      "video": {
        "gop": {
          "closed": true,
          "keyint": 4,
          "minKeyint": 2,
          "rcLookahead": 2,
          "sceneCut": true,
          "strict": true
        },
        "vbvRate": {
          "minrate": 0.5,
          "maxrate": 1.5,
          "bufsize": 3.0
        }
      }
    },
    "progressive": {
      "video": {
        "gop": {
          "closed": true,
          "sceneCut": true,
          "strict": false
        }
      }
    },
    "proxy": {
      "video": {
        "gop": {
          "closed": false,
          "sceneCut": true,
          "strict": false
        }
      }
    }
  }
}
